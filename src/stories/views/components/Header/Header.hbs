<div x-data="{}"
     x-init="console.log('alpineJS is installed')"
     class="flex flex-wrap max-w-full border-b border-white bg-blue-science font-copy lg:justify-center lg:w-full">

    <div id="brandNavWrapper" class="relative z-0 flex items-center justify-center order-1 w-full bg-white border-b border-black">
        {{> components/Header/BrandNavigation/BrandNavigation }}
    </div>

    <div class="relative flex justify-center order-2 w-full border-b border-white bg-blue-science z-101">
       
        <div class="flex container px-3.5 md:px-5 lg:px-10">
            <span class="hidden c-serviceNav__headline" id="serviceNavHeadline">Service Navigation</span>

            <div id="logoWrapper" class="relative flex flex-initial self-center align-top flex-none justify-end inline-block w-full max-w-full order-1 px-2 bg-blue-science md:flex-auto h-12 md:px-2.5 md:float-left md:w-1/2 md:max-w-1/2 lg:justify-start lg:w-1/4 lg:max-w-1/4 lg:pt-0 lg:pl-3">
                <a class="text-white fill-current" href="https://www.hessenschau.de/index.html" title="Startseite hessenschau . d e">
                    {{> components/base/image/icon _icon="brandlogo--compact-40x40px" _iconmap="logo" _addClass="md:hidden w-full h-11"}}
                    {{> components/base/image/icon _icon="brandlogo--desk" _iconmap="logo" _addClass="hidden md:flex md:-ml-12 justify-start fill-white h-11 p-0 -ml-12"}}
                </a>
            </div>

            <div id="serviceNavWrapper" class="flex flex-initial order-4 hidden w-full max-w-full py-2 mt-px text-white border-b border-white divide-x divide-white bg-blue-science lg:order-2 justify-evenly md:flex md:mt-0 md:w-1/3 md:order-2 md:justify-end md:border-0 ">
                {{> components/Header/ServiceNavigation/ServiceNavigation }}
            </div>

            <div id="searchWrapper" class="flex items-center justify-end flex-1 order-2 p-2 bg-blue-science lg:order-3 md:order-3 md:flex-none lg:w-1/4">
                // Search 
            </div>
            
            <div id="burgerWrapper" class="justify-end flex-none order-3 p-2 bg-blue-science lg:order-4 md:order-4 lg:hidden ">
                // Burger 
            </div>

        </div>
    </div>

        <div id="sectionNavWrapper" x-ref="sectionNavigation" class="container flex flex-auto order-3 hidden bg-blue-science top-32 md:flex ">
            {{> components/Header/SectionNavigation/SectionNavigation }}
        </div>
</div>