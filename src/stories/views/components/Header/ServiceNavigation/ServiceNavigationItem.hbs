{{#each this.navigationItems}}
    <li @click="toggle; searchFieldOpen=false; $store.serviceItems.current = '{{nextRandom}}'; $dispatch('burger-close');" 
        @click.outside="dropped = false"
        @close-servicemenu.window="dropped = false" 
        x-data="dropdown"
        id="{{getRandom}}"
        :class="dropped ? 'bg-white text-blue-congress md:rounded md:mt-2' : ''"
        class="js-serviceItem flex flex-col justify-center lg:pt-1.5 lg:justify-start items-center w-full h-full 
        px-4 text-white {{#if this.selected}} font-bold  -currentService {{/if}} lg:px-4 lg:relative lg:h-14 lg:rounded lg:mt-2 lg:border-0 lg:left-0">  
        
        {{> components/base/image/icon _icon=this.icon _iconmap="icons" _addClass="w-8 lg:w-6 fill-current h-8 lg:h-6 align-center"}}
        
        <div class="relative flex flex-row items-center justify-center z-200 b-0">
            <span class="hidden text-xs lg:relative lg:flex lg:inline-block lg:left-0 lg:h-auto lg:w-full lg:align-center whitespace-nowrap">
                {{label}} 
            </span>
            <div class="hidden opacity-70 lg:flex lg:inline-block">
                <svg :class="dropped ? 'hidden' : 'h-4 w-4'" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor">
                    <path fill-rule="evenodd" d="M5.293 7.293a1 1 0 011.414 0L10 10.586l3.293-3.293a1 1 0 111.414 1.414l-4 4a1 1 0 01-1.414 0l-4-4a1 1 0 010-1.414z" clip-rule="evenodd"/></svg>
                <svg :class="dropped ? 'h-4 w-4' : 'hidden'" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor">
                    <path fill-rule="evenodd" d="M14.707 12.707a1 1 0 01-1.414 0L10 9.414l-3.293 3.293a1 1 0 01-1.414-1.414l4-4a1 1 0 011.414 0l4 4a1 1 0 010 1.414z" clip-rule="evenodd"/>
                </svg>
            </div>
        </div>
        
        {{> components/Header/NavigationFlyout/NavigationFlyout _isSectionNav=false  _navigationType="ServiceNav"  }}
        
    </li>
{{/each}}