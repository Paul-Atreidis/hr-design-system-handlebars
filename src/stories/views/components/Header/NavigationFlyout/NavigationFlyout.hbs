{{#with this.subNavigation}}
    <div x-show="dropped" @click.away="dropped = false" x-init="console.log('initialised!')"
        class="absolute w-96 top-14 left-0 h-auto bg-white flex flex-wrap mx-2">
        {{#unless ../this.isCluster ~}}
            <div class="c-subNav__header w-full">
                <div class="c-subNav__item block p-5 bg-blue-100 hover:bg-blue-600 text-gray-600 hover:text-white">              
                    <a href="#" class="c-subNav__link -isHeaderLink link  js-loadScript" data-hr-click-tracking='{"settings": [{"type": "uxAction", "secondLevelId": "1", "clickLabel": "{{_navigationType}}::{{_parent}}::{{../this.flyoutStartLinkText}}-Link geklickt"}]}'>
                        {{../this.flyoutStartLinkText}}
                    </a>      
                </div>          
            </div>
        {{/unless}}

     
        {{#each this.columns}}  
            {{> components/Header/NavigationFlyout/NavigationFlyoutColumn }}
        {{/each~}}
    </div>
{{/with}}